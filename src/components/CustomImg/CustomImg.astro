---
import CustomImgInternal from "./CustomImgInternal.svelte";

interface Props {
    src?: string;
    title?: string;
    alt?: string;
}

const { title } = Astro.props;
---

<CustomImgInternal {...Astro.props} client:visible />

<p>{title}</p>

<style>
    p {
        text-align: center;
        color: #888;
        height: 1em;
        margin: 1em 0;
    }
</style>
