---
import type { ArticleMarkdown } from "$scripts/types";

const footerSections = (
  await Astro.glob("../markdown/footer_sections/*.md")
).sort(
  (a, b) => a.frontmatter.footer_position - b.frontmatter.footer_position
) as ArticleMarkdown[];
---

<footer>
  {
    footerSections.map(({ Content, frontmatter }) => (
      <section>
        <h4>{frontmatter.title}</h4>
        <Content />
      </section>
    ))
  }
</footer>

<style>
  footer {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    background-color: #141414;
    padding: 50px var(--horizontal-page-margin);
  }

  section {
    width: 250px;
    margin: 10px;
    color: #c7c7c7;
  }

  h4 {
    font-size: 18px;
  }
</style>
